
  <%= form_for @events, html:{class:"form-horizontal"} do |f| %>
  <div class= "container">
    <table class="table">

    <div class = "form-group">
      <%= f.label :date, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.date_field :date %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :description, class: "col-sm-2 control-label"  %>
      <div class="col-sm-5">
        <%= f.text_field :description, class: "form-control"  %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label "REQUIRES ID", class: "col-sm-2 control-label" %>
      <div class="col-sm-2">
        <%= f.check_box :requires_id %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :capacity, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.number_field :capacity, class: "form-control"  %>
      </div>
    </div>

    <div class = "form-group">
      <%= f.label :directions, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_area :directions, class: "form-control"  %>
      </div>
    </div>

    <div class = "form-group">
      <div class="col-sm-5">
        <%= f.submit %>
      </div>
    </div>

  <% end %>
</table>
</div>
